@using WebApp_TransportCompany.ViewModels
@model Driver
@{
    ViewData["Title"] = "Details";
}

<div class="row ">
    <!-- Collapsable Card Example -->
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-body">
                <a asp-controller="Report" asp-action="Index">Отчеты</a>
                <a asp-controller="Truck" asp-action="Details" asp-route-truck="@Model.Truck.Id">@Model.Truck.TruckLicState @Model.Truck.Name @Model.Truck.Model</a>
                @{ await Html.RenderPartialAsync("_DriverFormPartial", new DriverFormPartialViewModel()
                    {
                        Driver = Model,
                        Trucks = null,
                        Readonly = true
                    });}
            </div>
        </div>
    </div>

</div>
