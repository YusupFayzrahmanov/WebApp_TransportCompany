@model Repair
<div id="repair-details-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="form-group row">
                <label name="truckId" class="col-sm-3 col-form-label">Грузовик:</label>
                <div class="col-sm-9">
                    <a class="form-control" asp-controller="Truck" asp-action="Details" asp-route-truck="@Model.Truck.Id">@Model.Truck.TruckLicState - @Model.Truck.Name @Model.Truck.Model</a>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Водитель:</label>
                <div class="col-sm-9">
                    <a class="form-control" asp-controller="Driver" asp-action="Details" asp-route-id="@Model.Driver.Id">@Model.Driver.Id - @Model.Driver.Name @Model.Driver.Surname</a>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Тип ремонта:</label>
                <div class="col-sm-9">
                    <input value="@Model.RepairType.Name" readonly type="text" class="form-control" id="recipient-name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Наименование:</label>
                <div class="col-sm-9">
                    <input value="@Model.Name" readonly type="text" class="form-control" id="recipient-name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Название компании:</label>
                <div class="col-sm-9">
                    <input value="@Model.CompanyName" type="text" class="form-control">
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Дата ремонта:</label>
                <div class="col-sm-9">
                    <input value="@Model.RepairDate" type="datetime" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Цена:</label>
                <div class="col-sm-9">
                    <input value="@Model.Price" type="number" class="form-control" id="recipient-name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Окончание гарантии:</label>
                <div class="col-sm-9">
                    <input value="@(Model.GuaranteeDeadline.HasValue? Model.GuaranteeDeadline.Value.ToString():"Отсутсвует")" readonly type="text" class="form-control" id="recipient-name">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Гарантия:</label>
                <div class="col-sm-9">
                    <span>@(Model.Guarantee ? "Есть" : "Отсутствует")</span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Предыдущий ремонт:</label>
                <div class="col-sm-9">
                    <a class="form-control" data-toggle="ajax-modal" item-url="/Repair/Details/@Model.PreviousRepair.Id">@Model.PreviousRepair.RepairDate - @Model.Name</a>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Описание:</label>
                <div class="col-sm-9">
                    <textarea class="form-control">@Model.Description</textarea>
                </div>
            </div>
            <div class="modal-footer row justify-content-center">
                <button type="button" class="btn btn-secondary col-sm-3" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>


