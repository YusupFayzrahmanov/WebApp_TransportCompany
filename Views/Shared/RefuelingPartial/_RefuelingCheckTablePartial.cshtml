@model IEnumerable<RefuelingCheck>
<table class="table table-hover dataTable" id="ref-check-table" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Номер т.с.</th>
            <th>Дата</th>
            <th>АЗС</th>
            <th>Кол-во литров</th>
            <th>Цена</th>
            <th>Итого</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var _item in Model)
            {
                <tr>
                    <td>
                        @if (_item.Truck != null)
                        {
                            <a asp-controller="Truck" asp-action="Details" asp-route-truck="@_item.Truck.Id">@_item.Truck.TruckLicState</a>
                        }
                        else
                        {
                            <span class="text-danger">Отсутсвует</span>
                        }
                    </td>
                    <td>@_item.RefuelDate.ToShortDateString()</td>
                    <td>@_item.GasStation.GetDisplayName()</td>
                    <td>@_item.Liters</td>
                    <td>@_item.Price</td>
                    <td>@(_item.Price * _item.Liters)</td>
                    
                </tr>
            }

        }

    </tbody>
</table>
