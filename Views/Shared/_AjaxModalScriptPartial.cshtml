<script>
    $(function () {
        $('a[data-toggle="ajax-modal"]').click(function (event) {
            var url = $(this).attr('item-url');
            $.get(url).done(function (data) {
                $('.modal').modal('hide');
                $('#ajax-modal-placeholder').html(data);
                $('#ajax-modal-placeholder > .modal').modal('show');
            });
        });
    });
</script>