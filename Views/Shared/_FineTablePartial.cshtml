@model IEnumerable<Fine>
<table class="table table-hover dataTable" id="fine-table" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Номер т.с.</th>
            <th>Нарушение</th>
            <th>Сумма</th>
            <th>Дата</th>
            <th>Водитель</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null)
        {
            foreach (var _item in Model)
            {
                <tr>
                    <td>
                        @if (_item.Truck != null)
                        {
                            <a asp-controller="Truck" asp-action="Details" asp-route-item="@_item.Truck.Id">@_item.Truck.TruckLicState @_item.Truck.Name @_item.Truck.Model</a>
                        }
                        else
                        {
                            <span class="text-danger">Отсутсвует</span>
                        }
                    </td>
                    <td>@_item.Principle</td>
                    <td>@_item.Amount</td>
                    <td>@_item.Date.ToShortDateString()</td>
                    <td>
                        @if (_item.Driver != null)
                        {
                            <a asp-controller="Driver" asp-action="Details" asp-route-item="@_item.Driver.Id">@_item.Driver.Name @_item.Driver.Surname</a>
                        }
                        else
                        {
                            <span class="text-danger">Отсутсвует</span>
                        }
                    </td>
                </tr>
            }

        }

    </tbody>
</table>
