@model IEnumerable<TatneftCard>
<table class="table table-hover dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Примечание</th>
            <th data-orderable="false"></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (var _item in Model)
                {
                    <tr>
                        <td>@_item.Number</td>
                        <td>@(_item.Date.HasValue? _item.Date.Value.ToShortDateString():"Отсутвует")</td>
                        <td>@_item.Note</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-group" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a asp-controller="Refueling" asp-action="DeleteCard" asp-route-id="@_item.Id" class="dropdown-item">Удалить</a>
                                    @*<button type="button" class="dropdown-item delete-item-btn" btn-delete-item-id="@_item.Id">
                                        Удалить
                                    </button>*@
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }

        }
    </tbody>
</table>