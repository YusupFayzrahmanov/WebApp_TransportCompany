@using WebApp_TransportCompany.ViewModels
@model Report
@{
    ViewData["Title"] = "Details";
}

<div class="row ">
    <!-- Collapsable Card Example -->
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-body">
                <a asp-controller="Truck" asp-action="Details" asp-route-truck="@Model.Truck.Id">@Model.Truck.TruckLicState @Model.Truck.Name @Model.Truck.Model</a>
                <a asp-controller="Driver" asp-action="Details" asp-route-id="@Model.Driver.Id">@Model.Driver.Name @Model.Driver.Surname @Model.Driver.FirstPhone</a>
                @{ await Html.RenderPartialAsync("_ReportFormPartial", new ReportFormPartialViewModel()
                    {
                        Report = Model,
                        Trucks = null,
                        Readonly = true
                    });}
            </div>
        </div>
    </div>

</div>
