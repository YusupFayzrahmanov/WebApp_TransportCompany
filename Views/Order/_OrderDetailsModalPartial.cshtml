@model Order
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Детальная информация о заказе</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label name="truckId" class="col-sm-3 col-form-label">Транспортное средство:</label>
                    <div class="col-sm-9">
                        <a asp-controller="Truck" asp-action="Details" asp-route-truck="@Model.Truck.Id"
                           class="form-control">@Model.Truck.TruckLicState - @Model.Truck.Name @Model.Truck.Model</a>
                    </div>
                </div>
                <div class="form-group row">
                    <label name="DriverId" class="col-sm-3 col-form-label">Водитель:</label>
                    <div class="col-sm-9">
                        <a asp-controller="Driver" asp-action="Details" asp-route-id="@Model.Driver.Id">
                            @Model.Driver.Id - @Model.Driver.Name @Model.Driver.Surname
                        </a>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StartDate" class="col-sm-3 col-form-label">Дата начала:</label>
                    <div class="col-sm-9">
                       <input class="form-control"  value="@Model.StartDate.ToShortDateString()" readonly/>
                    </div>

                </div>
                <div class="form-group row">
                    <label asp-for="TypeOfCargo" class="col-sm-3 col-form-label">Вид груза:</label>
                    <div class="col-sm-9">
                        <input class="form-control" value="@Model.TypeOfCargo.GetDisplayName()" readonly/>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CompanyName" class="col-sm-3 col-form-label">Компания:</label>
                    <div class="col-sm-9">
                        <input asp-for="CompanyName" value="@Model.CompanyName" type="text" class="form-control" readonly>
                    </div>

                </div>
                <div class="form-group row">
                    <label asp-for="DepPoint" class="col-sm-3 col-form-label">Отбытие:</label>
                    <div class="col-sm-9">
                        <input asp-for="DepPoint" value="@Model.DepPoint" type="text" class="form-control" readonly>
                    </div>

                </div>
                <div class="form-group row">
                    <label asp-for="EndPoint" class="col-sm-3 col-form-label">Место назначения:</label>
                    <div class="col-sm-9">
                        <input type="text" value="@Model.EndPoint" asp-for="EndPoint" class="form-control" readonly>
                    </div>

                </div>
                <div class="form-group row">
                    <label asp-for="Distance" class="col-sm-3 col-form-label">Расстояние:</label>
                    <div class="col-sm-9">
                        <input type="number" value="@Model.Distance" asp-for="Distance" class="form-control" readonly>
                    </div>

                </div>
                <div class="form-group row">
                    <label asp-for="CargoWeight" class="col-sm-3 col-form-label">Вес:</label>
                    <div class="col-sm-9">
                        <input asp-for="CargoWeight" value="@Model.CargoWeight" type="number" class="form-control" readonly>
                    </div>

                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-3 col-form-label">Цена:</label>
                    <div class="col-sm-9">
                        <input asp-for="Price" value="@Model.Price" type="number" class="form-control" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Note" class="col-sm-3 col-form-label">Описание:</label>
                    <div class="col-sm-9">
                        <textarea asp-for="Note" class="form-control">@Model.Note</textarea>
                    </div>
                </div>
                <div class="modal-footer row justify-content-center">
                    <button type="button" class="btn btn-secondary col-sm-3" data-dismiss="modal">Закрыть</button>
                </div>
            </div>

        </div>
    </div>
</div>