@model Salary
<div id="salary-edit-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Водитель:</label>
                <div class="col-sm-9">
                    <a asp-controller="Driver" asp-action="Details" asp-route-id="@Model.Driver.Id">
                        @Model.Driver.Name  @Model.Driver.Surname @Model.Driver.FirstPhone
                    </a>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Начало:</label>
                <div class="col-sm-9">
                    <input type="datetime" value="@Model.StartPeriod" readonly class="form-control" id="recipient-name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Конец:</label>
                <div class="col-sm-9">
                    <input value="@Model.EndPeriod" readonly type="datetime" class="form-control" id="recipient-name">
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Сумма:</label>
                <div class="col-sm-9">
                    <input value="@Model.Amount" readonly type="number" class="form-control" id="recipient-name">
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Списано средств:</label>
                <div class="col-sm-9">
                    <input value="@Model.WrittenOff" readonly type="number" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Метод оплаты:</label>
                <div class="col-sm-9">
                    <input class="form-control" readonly value="@Model.PaymentMethod.GetDisplayName()" />
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Дата оплаты:</label>
                <div class="col-sm-9">
                    <input type="datetime" readonly class="form-control" id="recipient-name" value="@Model.OperationDate">
                </div>

            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Примечание:</label>
                <div class="col-sm-9">
                    <textarea class="form-control" readonly>@Model.Note</textarea>
                </div>

            </div>
            <div class="modal-footer row justify-content-center">
                <button type="button" class="btn btn-secondary col-sm-3" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>
